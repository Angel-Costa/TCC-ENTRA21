
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")"
           class="btn btn-primary"><i class="fas fa-plus"></i> Comodidades</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Comodidade comodidade in ViewBag.Comodidades)
        {
            <tr>
                <td>@comodidade.Id</td>
                <td>@comodidade.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = comodidade.Id })"
                       class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar                       
                    </a>

                    <a href="@Url.Action("Apagar", new { id = comodidade.Id })"
                       class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>