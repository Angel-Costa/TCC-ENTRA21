
@{
    ViewBag.Title = "Index";
}



<div class="page-header card" style="width: 1220px;">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont icofont icofont-hotel-boy-alt" style="background-color: #171d2b;"></i>
                <div class="d-inline">
                    <h4>Lista de serviços oferecido pelo Hotel</h4>
                    <span></span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">

            <ul class="breadcrumb-title">
                <li>
                    <a class="btn float-right"
                       style="background-color: #00ae1b; color: white;"
                       href="@Url.Action("Cadastro")">
                        <i class="fas fa-plus"></i> Novo Serviço
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="form-group col-lg-12">
    <div class="row">

        @foreach (Model.Comodidade comodidade in ViewBag.Comodidades)
        {
            <div class="card mr-3">
                <div class="card-body ">
                    <div class="sub-title">Cadastro: @comodidade.Id</div>
                    <div class="sub-title">Serviço: @comodidade.Nome</div>
                    <div class="sub-title">Hotel: @comodidade.Hotel.Nome</div>
                    <div class="row">

                        <a href="@Url.Action("Apagar", new {id = comodidade.Id})"
                           class="btn text-danger float-right">
                            <i class="fas fa-trash"></i> Apagar
                        </a>

                        <a href="@Url.Action("Editar", new { id = comodidade.Id })"
                           class="btn text-primary float-right">
                            <i class="fas fa-pen"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
