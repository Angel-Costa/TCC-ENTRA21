	
@{
    ViewBag.Title = "Index";
}

<h2>Comodidade</h2>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")"
           class="btn btn-primary float-right"><i class="fas fa-plus"></i> Comodidades</a>
    </div>
</div>

<table class="table table-striped" style="background-color: #f9fcff;">
    <thead style="background-color: #212529; color: white;">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Hotel</th>
            <th>Ação</th>
        </tr>
    </thead>
    


    <tbody>
        @foreach (Model.Comodidade comodidade in ViewBag.Comodidades)
        {
            <tr>
                <td>@comodidade.Id</td>
                <td>@comodidade.Nome</td>
                <td>@comodidade.Hotel.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = comodidade.Id })"
                       class="btn btn-outline-primary">
                        <i class="fas fa-pen"></i> Editar                       
                    </a>

                    <a href="@Url.Action("Apagar", new { id = comodidade.Id })"
                       class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
