
@{
    ViewBag.Title = "Cadastro";
}

    <h2>Cadastro de serviços</h2>

<form action="@Url.Action("Cadastro")" method="post">

    <div class="row">
        <div class="col-sm-12 col-xl-4 m-b-30">
            <h4 class="sub-title">Serviço</h4>
            <input id="campo-comodidade" class="form-control" type="text" name="nome" placeholder="Digite aqui o serviço" />
        </div>
        <div class="col-sm-12 col-xl-4 m-b-30">
            <h4 class="sub-title">Hotel</h4>
            <input id="campo-hotel" class="form-control" type="text" name="nome" placeholder="Nome do hotel" />
        </div>
    </div>

    <button class="btn btn-success float-right" type="submit">
        <i class="fas fa-save"></i> Salvar
    </button>
</form>
