

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<form action="@Url.Action("Editar")" method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">
                    Nome
                </label>
                <input class="form-control" type="text" name="nome" id="campo-nome" value="@ViewBag.Comodidade.Nome" />

                <label form="campo-hotel" class="mt-3">Hoteis</label>
                <select class="form-control" name="idHotel">
                    <option disabled="disabled" selected="selected">Selecione um Hotel</option>
                    @foreach (Model.Hotel hotel in ViewBag.Hoteis)
                    {
                        if (hotel.Id == ViewBag.Comodidade.IdHotel)
                        {
                        <option value="@hotel.Id"
                                selected="selected" >@hotel.Nome</option>
                        }
                        else
                        {
                            <option value="@hotel.Id">@hotel.Nome</option>
                        }
                    }
                </select>

                <button class="form-control btn btn-success float-right mt-3" type="submit">
                    <i class="fas fa-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
</form>