
@{
    ViewBag.Title = "EditarPerfil";
}

@section css{
    <link href="~/Content/css/administrador/editar-perfil.css" rel="stylesheet" />
}

<div class="card mr-3">
    <div class="card-body ">
        <form class="form-group col-5 offset-4 mt-lg-3" action="Upload" method="post" enctype="multipart/form-data">
            <input type="file" name="file" />
            <button class="btn btn-outline-success mt-3" type="submit"> <i class="fas fa-file-import"></i>Enviar Imagem</button>
        </form>

        <form action="@Url.Action("EditarPerfil")" method="post">



            <div class="personal-image">
                <label class="label">
                    <figure class="personal-figure">
                        <img src="~/Content/FOTO ZIIKA DO USUARIO ZIKA.jpg" class="personal-avatar" alt="avatar">
                        <figcaption class="personal-figcaption">
                        </figcaption>
                    </figure>
                </label>
            </div>

            <div class="row">
                <div class="form-group col-4 offset-4">
                    <h4 class="sub-title mt-3">Usuário</h4>
                    <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Usuario" value="@ViewBag.Administrador.Nome" maxlength="50" autocomplete="off" required>
                </div>
                <div class="form-group col-4 offset-4">

                    <h4 class="sub-title">E-mail</h4>
                    <input type="text" class="form-control" id="Email" name="Email" placeholder="Email" value="@ViewBag.Administrador.Login" maxlength="35" autocomplete="off" required>

                    <a href="@Url.Action("perfil")" class="btn btn-outline-success mt-2 float-md-right"> <i class="fas fa-save"></i>Salvar</a>

                </div>
            </div>
        </form>
    </div>
</div>

