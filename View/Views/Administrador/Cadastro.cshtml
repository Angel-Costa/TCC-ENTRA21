
@{
    ViewBag.Title = "Cadastro";
}



<h2>Cadastro</h2>

<form action="@Url.Action("Index")" method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" autocomplete="off" required/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cpf" class="text-danger">CPF *</label>
                <input type="text" name="cpf" id="campo-cpf" class="form-control"
                       data-mask="000.000.000-00"
                       maxlength="11"
                       autocomplete="off"
                       data-mask-selectonfocus="true" required/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-login">Login</label>
                <input type="text" name="login" id="campo-login" class="form-control border-danger" autocomplete="off" required/>
            </div>
        </div>
    </div>

    <div class="row"> 
        <div class="col-12">
            <div class="form-group">
                <label for="campo-senha">
                    Senha
                </label>
                <input type="text" name="senha" id="campo-senha" class="form-control border-danger" autocomplete="off" required/>
            </div>
        </div>
    </div>
    <div class="col-12">
        <button class="btn btn-success float-right" type="submit">
            <i class="fas fa-save"></i> Salvar
        </button>
    </div>
</form>






