
@{
    ViewBag.Title = "Editar";
}


<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="fas fa-users-cog" style="background-color: #343a40;"></i>
                <div class="d-inline">
                    <h4>Editar Administradores</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<form action="@Url.Action("Editar")" method="post">

    <div class="card">
        <div class="card-body ">
            <div class="row">
                <div class="col-sm-12 col-xl-8 m-b-30">
                    <div class="form-group">
                        <input type="hidden" id="campo-id" value="@ViewBag.Administrador.Id" />
                        <h4 class="sub-title">Nome<strong>*</strong></h4>
                        <input class="form-control" type="text" name="nome"
                               id="campo-nome" value="@ViewBag.Administrador.Nome" maxlength="50" autocomplete="off" required />
                    </div>
                </div>
                <div class="col-sm-12 col-xl-4 m-b-30">
                    <h4 class="sub-title">CPF<strong>*</strong></h4>
                    <input type="text" name="cpf"
                           class="form-control"
                           data-mask="000.000.000-00"
                           autocomplete="off"
                           id="campo-cpf" required
                           value="@ViewBag.Administrador.Cpf" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-xl-7 m-b-30">
                    <h4 class="sub-title">Login<strong>*</strong></h4>
                    <input type="text" name="login" id="campo-login" autocomplete="off" class="form-control" value="@ViewBag.Administrador.Login" />
                </div>
                <div class="col-sm-12 col-xl-5 m-b-30">
                    <h4 class="sub-title">Senha<strong>*</strong></h4>
                    <input type="text"
                           class="form-control"
                           placeholder="Senha deve conter 6 caracteres"
                           name="senha"
                           maxlength="30"
                           autocomplete="off"
                           id="campo-senha" value="@ViewBag.Administrador.Senha" />
                </div>
            </div>
            <button class="btn btn-outline-success float-right" type="submit">
                <i class="fas fa-save"></i> Salvar
            </button>
        </div>
    </div>
</form>