
@{
    ViewBag.Title = "Index";
}

<h4 class="text-center">Administradores	</h4>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right"><i class="fas fa-plus"></i> Novo Administrador</a>
    </div>
</div>
<table class="table table-striped table-hover table-bordered mt-3">
    <thead>
        <tr>
            <td>Código</td>
            <td>Nome</td>
            <td>Login</td>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Administrador administrador in ViewBag.Administradores)
        {
            <tr>
                <td>@administrador.Id</td>
                <td>@administrador.Nome</td>
                <td>@administrador.Login</td>
                <td>
                    <a href="@Url.Action("Editar", new { Id = administrador.Id })"
                       class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="@Url.Action("Apagar", new { Id = administrador.Id })" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
