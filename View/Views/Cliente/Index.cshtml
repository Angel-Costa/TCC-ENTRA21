
@{
    ViewBag.Title = "Index";
}

<h4 class="text-center">Lista de Clientes</h4>
<div class="row">
    <div class="col-11 offset-1 mb-4">
        <a class="btn btn-primary float-right"
           href="@Url.Action("Cadastro")">
            <i class="fa fa-plus"></i> Novo Cliente</a>
    </div>
</div>

<div class="row">
    <div class="col-10 offset-1">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Estado</th>
                    <th>Cidade</th>
                    <th>Login</th>
                    <th>Senha</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>

                @foreach(Model.Cliente cliente in ViewBag.Clientes)
                {
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Estado</td>
                        <td>@cliente.Cidade</td>
                        <td>@cliente.Login</td>
                        <td>@cliente.Senha</td>
                        <td>
                            <a href="@Url.Action("Editar", new { Id = cliente.Id})"
                               class="btn btn-primary ">
                                <i class="fas fa-pen"></i> Editar
                            </a>
                            <a href="@Url.Action("Apagar", new { Id = cliente.Id})" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>