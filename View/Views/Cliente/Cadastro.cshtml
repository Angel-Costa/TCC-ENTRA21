
@{
    ViewBag.Title = "Cadastro";
}

    <h4>Cadastro de Cliente</h4>

<form action="@Url.Action("Cadastro")" method="POST">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input class="form-control" type="text"
                       name="nome" id="campo-nome" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-estado">Estado</label>
                <input type="text" name="estado"
                       class="form-control"
                       id="campo-estado" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cidade">Cidade</label>
                <input type="text" name="cidade"
                       class="form-control"
                       id="campo-cidade" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cep">Cep</label>
                <input type="text" name="cep"
                       class="form-control"
                       id="campo-cep" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label form="campo-bairro">Bairro</label>
                <input type="text" name="bairro"
                       class="form-control"
                       id="campo-bairro" />
            </div>
        </div>
    </div>
    <div  class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-numero">Número</label>
                <input type="text" name="numero"
                       class="form-control"
                       id="campo-numero" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label form="campo-rua">Rua</label>
                <input type="text" name="rua"
                       class="form-control"
                       id="campo-rua" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-complemento">Complemento</label>
                <input type="text" name="complemento"
                       class="form-control"
                       id="campo-complemento" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-login">Login</label>
                <input type="text" name="login"
                       class="form-control"
                       id="campo-login" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-senha">Senha</label>
                <input type="text" name="senha"
                       class="form-control"
                       id="campo-senha" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right" type="submit">
                <i class="fas fa-save"></i> Salvar
            </button>
        </div>
    </div>
</form>