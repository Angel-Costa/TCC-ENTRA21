
@{
    ViewBag.Title = "Editar";
}

<h2>Editar Cliente</h2>

<form action="@Url.Action("Alterar")" method="post">
    <input type="hidden" name="id" value="@ViewBag.Cliente.Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome"
                       class="form-control"
                       id="campo-nome"
                       value="@ViewBag.Cliente.Nome" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right">
                <i class="fa-fast-backward fa-save"></i> Salvar
            </button>
        </div>
    </div>
</form>