
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Hoteis</h2>

<form action="@Url.Action("Store")" method="post">

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input class="form-control" type="text" name="nome" id="campo-nome"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-descricao">Descrição</label>
                <textarea class="form-control"></textarea>
            </div>
        </div>
    </div>
</form>

