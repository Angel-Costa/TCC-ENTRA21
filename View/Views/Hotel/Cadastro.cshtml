
@{
    ViewBag.Title = "Cadastro";
}




<form action="@Url.Action("Cadastro")" method="post">

    <h2 style="color: #073763;">Informações do Hotel</h2>
    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-nome" style="color: #073763;">Nome</label>
                <input class="form-control" type="text" name="nome" id="campo-nome" />
            </div>
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-descricao" style="color: #073763;">Descrição</label>
                <input class="form-control" type="text" name="descricao" id="campo-descricao" />
            </div>
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-valor-noite" style="color: #073763;">Valor por noite</label>
                <input class="form-control" type="number" name="valorNoite" id="campo-valor-noite" />
            </div>
        </div>
    </div>

    <h2 style="color: #073763;">Endereço do Hotel</h2>
    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-estado" style="color: #073763;">Estado</label>
                <input class="form-control" type="text" name="estado" id="campo-estado" />
            </div>
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-cidade" style="color: #073763;">Cidade</label>
                <input class="form-control" type="text" name="cidade" id="campo-cidade" />
            </div>
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-cep" style="color: #073763;">CEP</label>
                <input class="form-control" type="text" name="cep" id="campo-cep" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-bairro" style="color: #073763;">Bairro</label>
                <input class="form-control" type="text" name="bairro" id="campo-bairro" />
            </div>
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-numero" style="color: #073763;">Número</label>
                <input class="form-control" type="number" name="numero" id="campo-numero" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-rua" style="color: #073763;">Rua</label>
                <input class="form-control" type="text" name="rua" id="campo-rua" />
            </div>
            <div class="form-group col-md-4 col-sm-4">
                <label for="campo-complemento" style="color: #073763;">Complemento</label>
                <input class="form-control" type="text" name="complemento" id="campo-complemento" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12" style="color: white;">           
                <button class="btn float-right btn-lg btn-block" style="background-color: #00ae1b; color: white;" type="submit">
                    <i class="ti-save" style="color: #FFFFFF;"></i> Salvar
                </button>
        </div>
    </div>
</form>

