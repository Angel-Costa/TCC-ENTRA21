
@{
    ViewBag.Title = "Index";
}

<style>
    table, td, tr {
        min-height: 300px;
        min-width: 300px;
    }

    .foo {
        min-height: 300px;
    }
</style>
<h2 class="text-cen">Lista de Hoteis</h2>
<div class="row">
    <div class="col-10 offset-1 mb-3">
        <a class="btn float-right"
           style="background-color: #00ae1b; color: white;"
           href="@Url.Action("Cadastro")">
            <i class="ti-plus"></i> Novo Hotel
        </a>
    </div>
</div>



<div class="row">
    <div style="tab-size: 6;">

        <table class="table table-dark" style="background-color: white;" id="hotel-index">

            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Valor por noite</th>
                    <th>Estado</th>
                    <th>Cidade</th>
          
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Hotel hotel in ViewBag.Hoteis)
                {
                    <tr>
                        <td>@hotel.Id</td>
                        <td>@hotel.Nome</td>
                        <td>@hotel.Descricao</td>
                        <td>@hotel.ValorNoite</td>
                        <td>@hotel.Estado</td>
                        <td>@hotel.Cidade</td>


                        <td>

                            <a href="@Url.Action("Editar", new { id = hotel.Id })"
                               class="btn btn-primary">
                                <i class="fas fa-pen"></i> Editar
                            </a>

                            <a href="@Url.Action("Apagar", new {id = hotel.Id})"
                               class="btn btn-danger">
                                <i class="fas fa-trash"></i> Apagar
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
