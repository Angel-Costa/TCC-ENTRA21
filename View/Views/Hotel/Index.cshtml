
@{
    ViewBag.Title = "Index";
}

<h2 class="text-cen">Lista de Hoteis</h2>
<div class="row">
    <div class="col-10 offset-1 mb-3">
        <a class="btn btn-primary float-right"
           href="@Url.Action("Hotel")">
            <i class="fa fa-plus"></i> Novo Hotel
        </a>
    </div>
</div>



<div class="page-header card" style="background-color: #303548">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <button class="btn btn-success float-right mb-3" data-target="#modal-hotel" data-toggle="modal">
                    Novo Hotel
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table class="table table-dark" style="background-color: white" id="hotel-index">

                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Valor por noite</th>
                            <th>Estado</th>
                            <th>Cidade</th>
                            <th>CEP</th>
                            <th>Bairro</th>
                            <th>Número</th>
                            <th>Rua</th>
                            <th>Complemento</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Model.Hotel hotel in ViewBag.Hoteis)
                        {
                            <tr>
                                <td>@hotel.Id</td>
                                <td>@hotel.Nome</td>
                                <td>@hotel.Descricao</td>
                                <td>@hotel.ValorNoite</td>
                                <td>@hotel.Estado</td>
                                <td>@hotel.Cidade</td>
                                <td>@hotel.CEP</td>
                                <td>@hotel.Bairro</td>
                                <td>@hotel.Numero</td>
                                <td>@hotel.Rua</td>
                                <td>@hotel.Complemento</td>
                                <td>

                                    <a href="@Url.Action("Editar", new { id = hotel.Id })"
                                       class="btn btn-primary">
                                        <i class="fas fa-pen"></i> Editar
                                    </a>

                                    <a href="@Url.Action("Apagar", new {id = hotel.Id})"
                                       class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Apagar
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
