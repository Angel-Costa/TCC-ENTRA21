
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3 class="text-center text-primary mt-3">Lista de Hoteis</h3>
<div class="row">
    <div class="col-12">
        <button class="btn btn-success float-right" data-target="#modal-hotel" data-toggle="modal">
            Novo Hotel
        </button> 
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover table table-bordered" id="hotel-index">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Quantidade de quartos</th>
                    <th>Valor por noite</th>
                    <th></th>
                    <th>Estado</th>
                    <th>Cidade</th>
                    <th>CEP</th>
                    <th>Bairro</th>
                    <th>Número</th>
                    <th>Rua</th>
                    <th>Complemento</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
