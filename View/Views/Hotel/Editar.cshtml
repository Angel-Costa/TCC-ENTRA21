
@{
    ViewBag.Title = "Editar";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont icofont icofont-hotel" style="background-color: #171d2b;"></i>
                <div class="d-inline">
                    <h4 style="text-transform: capitalize">Editar informações do hotel</h4>
                </div>
            </div>
        </div>
    </div>
</div>


<form action="@Url.Action("Editar")" method="post">
    <input type="hidden" name="id" value="@ViewBag.Hotel.Id" />

    <div class="card">
        <div class="card-body ">
            <div class="row">
                <div class="col-sm-12 col-xl-5 m-b-30">
                    <div class="form-group">
                        <h4 class="sub-title">Nome</h4>
                        <input type="text" name="nome"
                               class="form-control"
                               id="campo-nome"
                               value="@ViewBag.Hotel.Nome" placeholder="Digite o nome do hotel" maxlength="40" autocomplete="off" required />
                    </div>
                </div>
                <div class="col-sm-12 col-xl-5 m-b-30">
                    <div class="form-group">
                        <h4 class="sub-title">Descrição</h4>
                        <textarea type="text" name="descricao"
                                  class="form-control"
                                  id="campo-descricao"
                                  value="@ViewBag.Hotel.Descricao" placeholder="Faça aqui sua descrição" rows="7" cols="40" maxlength="500" autocomplete="off" required></textarea>
                    </div>
                </div>
                <div class="col-sm-12 col-xl-2 m-b-30">
                    <div class="form-group">
                        <h4 class="sub-title">Valor por noite</h4>
                        <input type="text" name="valor-noite" id="valor-noite" placeholder="Valor por Noite" class="form-control telphone_whith_code" data-mask="R$9999.999.99" value="@ViewBag.Hotel.ValorNoite" autocomplete="off" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-xl-3 m-b-30">
                    <h4 class="sub-title">Estado</h4>
                    <select class="form-control" id="estado" name="estado" autocomplete="off" required>
                        <option value="AC">Acre</option>
                        <option value="AL">Alagoas</option>
                        <option value="AP">Amapá</option>
                        <option value="AM">Amazonas</option>
                        <option value="BA">Bahia</option>
                        <option value="CE">Ceará</option>
                        <option value="DF">Distrito Federal</option>
                        <option value="ES">Espírito Santo</option>
                        <option value="GO">Goiás</option>
                        <option value="MA">Maranhão</option>
                        <option value="MT">Mato Grosso</option>
                        <option value="MS">Mato Grosso do Sul</option>
                        <option value="MG">Minas Gerais</option>
                        <option value="PA">Pará</option>
                        <option value="PB">Paraíba</option>
                        <option value="PR">Paraná</option>
                        <option value="PE">Pernambuco</option>
                        <option value="PI">Piauí</option>
                        <option value="RJ">Rio de Janeiro</option>
                        <option value="RN">Rio Grande do Norte</option>
                        <option value="RS">Rio Grande do Sul</option>
                        <option value="RO">Rondônia</option>
                        <option value="RR">Roraima</option>
                        <option value="SC">Santa Catarina</option>
                        <option value="SP">São Paulo</option>
                        <option value="SE">Sergipe</option>
                        <option value="TO">Tocantins</option>
                    </select>
                </div>
                <div class="col-sm-12 col-xl-6 m-b-30">
                    <h4 class="sub-title">Cidade</h4>
                    <input type="text" name="cidade"
                           class="form-control"
                           id="campo-cidade"
                           value="@ViewBag.Hotel.Cidade" placeholder="Digite a cidade" autocomplete="off" required />
                </div>
                <div class="col-sm-12 col-xl-3 m-b-30">
                    <div class="form-group">
                        <h4 class="sub-title">CEP</h4>
                        <input type="text" name="cep"
                               class="form-control telphone_whith_code" data-mask="00000-000"
                               id="campo-cep"
                               value="@ViewBag.Hotel.CEP" placeholder="Digite o CEP" autocomplete="off" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-xl-6 m-b-30">
                    <h4 class="sub-title">Bairro</h4>
                    <input type="text" name="bairro"
                           class="form-control"
                           id="campo-bairro"
                           value="@ViewBag.Hotel.Bairro" placeholder="Digite o bairro" maxlength="50" autocomplete="off" required />
                </div>
                <div class="col-sm-12 col-xl-2 m-b-30">
                    <h4 class="sub-title">Número</h4>
                    <input type="text" name="numero"
                           class="form-control"
                           id="campo-numero"
                           value="@ViewBag.Hotel.Numero" placeholder="Digite o número" maxlength="20" autocomplete="off" required />
                </div>

                <div class="col-sm-12 col-xl-4 m-b-30">
                    <div class="form-group">
                        <h4 class="sub-title">Rua</h4>
                        <input type="text" name="rua"
                               class="form-control"
                               id="campo-rua"
                               value="@ViewBag.Hotel.Rua" placeholder="Digite o nome da rua" maxlength="50" autocomplete="off" required />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 col-xl-4 m-b-30">
                    <div class="form-group">
                        <h4 class="sub-title">Complemento</h4>
                        <input type="text" name="complemento"
                               class="form-control"
                               id="campo-complemento"
                               value="@ViewBag.Hotel.Complemento" placeholder="Digite um complemento" maxlength="50" autocomplete="off" required />
                    </div>
                </div>
            </div>
            <button class="btn btn-outline-success float-right" type="submit">
                <i class="fas fa-save"></i> Salvar
            </button>
        </div>
    </div>
</form>

<!-- Required Jquery -->
<script type="text/javascript" src="~/Content/tema/bower_components/jquery/js/jquery.min.js"></script>
<script type="text/javascript" src="~/Content/tema/bower_components/jquery-ui/js/jquery-ui.min.js"></script>
<script type="text/javascript" src="~/Content/tema/bower_components/popper.js/js/popper.min.js"></script>
<script type="text/javascript" src="~/Content/tema/bower_components/bootstrap/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>