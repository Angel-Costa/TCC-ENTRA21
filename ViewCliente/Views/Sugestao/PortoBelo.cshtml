
@{
    ViewBag.Title = "PortoBelo";
}

<h2>PortoBelo</h2>

<div class="row">
    <div class="col-lg-12 col-xl-6">
        <div class="card mr-5">
            <div class="card-body">
                <div>
                    <img src="~/Content/Uploads/@ViewBag.Hotel.Imagem" />
                    <p>
                        Teatro Carlos Gomes
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@foreach (Model.Hotel hotel in ViewBag.Hoteis)
{
    if (hotel.Cidade == "Porto Belo")
    {
        <div class="row">
            <div class="col-lg-12 col-xl-6">
                <div class="card mr-5">
                    <div class="card-body">
                        <div>
                            <img src="~/Content/Uploads/@ViewBag.Hotel.Imagem" />                            
                        </div>
                        <div class="sub-title">Hotel: @hotel.Nome</div>
                        <div class="sub-title">Valor por Noite: @hotel.ValorNoite</div>
                        <div class="sub-title">Bairro: @hotel.Bairro</div>
                        <div class="sub-title">Rua: @hotel.Rua</div>
                    </div>
                </div>
            </div>
        </div>
    }
}