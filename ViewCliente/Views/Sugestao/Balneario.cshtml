
@{
    ViewBag.Title = "BalnearioCamboriou";
}

<h2>BalnearioCamboriou</h2>

<style>
    .container img{
        max-width: 200px;
        max-height: 150px;
        width: auto;
        height: auto;
    }
    .container{
        clear: both;
        margin-top: 20px;
    }
    img{
        vertical-align: top;
    }
</style>

<div class="row">
    <div class="col-lg-12 col-xl-6">
        <div class="card mr-5">
            <div class="card-body">
                <div>
                    <img class="container img"src="~/Content/imagem/Balneario/balneario.jpg" alt="" />
                    <p>
                        Bondinho da cidade de Balneario Camboriú
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-xl-6">
        <div class="card mr-5">
            <div class="card-body">
                <div>
                    <img class="container img" src="~/Content/imagem/Balneario/morro do careca.jpg" alt="Alternate Text" />
                </div>
                <p>
                    Morro do Careca
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">

    @foreach (Model.Hotel hotel in ViewBag.Hoteis)
    {
        if (hotel.Cidade == "Balneário Camboriú")
        {
            <div class="card mr-5">
                <div class="card-body">
                    <div>
                        <img class="container img" src="~/Content/Uploads/Hoteis/@hotel.Imagem" alt="" />
                    </div>
                    <div class="sub-title">Hotel: @hotel.Nome</div>
                    <div class="sub-title">Valor por Noite: @hotel.ValorNoite</div>
                    <div class="sub-title">Bairro: @hotel.Bairro</div>
                    <div class="sub-title">Rua: @hotel.Rua</div>
                </div>
            </div>
        }
    }
</div>