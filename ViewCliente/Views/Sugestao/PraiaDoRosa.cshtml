
@{
    ViewBag.Title = "PraiaDoRosa";
}

<h2>Praia Do Rosa</h2>

<div class="row">
    <div class="col-lg-12 col-xl-6">
        <div class="card mr-5">
            <div class="card-body">
                <div>
                    <img src="~/Content/imagem/Praia do Rosa/praia.jpg" />
                    <p>
                        Praia do Rosa
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@foreach(Model.Hotel hotel in ViewBag.Hoteis)
{
    if(hotel.Cidade == "Praia do Rosa")
    {
    <div class="row">
        <div class="col-lg-12 col-xl-6">
            <div class="card-body">
                <div>
                    <img class="d-block img-fluid" src="~/Content/Uploads/@hotel.Imagem" />
                    <div class="sub-title mt-3">Hotel: @hotel.Nome</div>
                    <div class="sub-title">Valor por noite: @hotel.ValorNoite</div>
                    <div class="sub-title">Bairro: @hotel.Bairro</div>
                    <div class="sub-title">Rua: @hotel.Rua</div>
                </div>
            </div>
        </div>
    </div>
    }
}
