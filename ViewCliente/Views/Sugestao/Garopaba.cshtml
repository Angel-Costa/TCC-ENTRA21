
@{
    ViewBag.Title = "Garopaba";
}

<h2>Garopaba</h2>

<div class="row">
    <div class="col-lg-12 col-xl-6">
        <div class="card mr-5">
            <div>
                <img class="container img" src="~/Content/imagem/Garopaba/garuBanner.jpg"~ />
                <p align='justify'>
                    Garopaba é uma cidade catarinense que oferece turismo de aventura 
                    em suas belas e exuberantes praias com a prática de esportes como o surfe, 
                    o sandboard, mergulho e também o turismo religioso, cujas tradições são bastante 
                    preservadas. Conheça os Pontos Turísticos de Garopaba.
                </p>
            </div>
        </div>
    </div> 
</div>

@foreach(Model.Hotel hotel in ViewBag.Hoteis)
{
    if(hotel.Cidade == "Garopaba")
    {
     
        <div class="row">
            <div class="col-lg-12 col-xl-6">
                <div class="card mr-3">
                    <div class="card-body">
                        <div>
                            <img class="d-block img-fluid" src="~/Content/melhoresHoteis/dallas.jpg" />
                            <div class="sub-title">Hotel: @hotel.Nome</div>
                            <div class="sub-title">Valor por noite: @hotel.ValorNoite</div>
                            <div class="sub-title">Bairro: @hotel.Bairro</div>
                            <div class="sub-title">Rua: @hotel.Rua</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
