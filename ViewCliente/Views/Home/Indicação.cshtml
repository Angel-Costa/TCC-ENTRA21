
@{
    ViewBag.Title = "Indicação";
}

<script>

    function myFunction() {
        document.getElementById("demo").innerHTML = "Enviado com Sucesso!";
    }
</script>



<div class="card text-center">
    <div class="card-body">
        <h4 class="card-title">Bem vindo viajante</h4>
        <div>
        <p class="card-text">Obrigado por compartilhar com a gente!</p>

        </div>

        <div class="form-group col-4 offset-4 mt-3">
            <h4 class="sub-title">Nome</h4>
            <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Usuario">
        </div>

        <div class="form-group col-4 offset-4">
            <h4 class="sub-title">E-mail</h4>
            <input type="text" class="form-control" id="Email" name="Email" placeholder="Email">
        </div>

        <div class="form-group col-4 offset-4">
            <label for="exampleFormControlTextarea1">Descrição do Lugar</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>

        <button onclick="myFunction()" class="btn btn-outline-dark float-none">Enviar</button>
        <p id="demo"></p>

        
    </div>
</div>






