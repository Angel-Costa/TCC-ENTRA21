
@{
    ViewBag.Title = "Indicação";
}

<head>

    <style>

        .card {
            margin: 0 auto;
            float: none;
            margin-bottom: 10px;
        }

        body {
            margin: 0;
            padding: 0;
        }

        .contact-form {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            height: 550px;
            padding: 80px 40px;
            box-sizing: border-box;
            background: rgba(0, 0, 0, .5);
        }
    </style>

    <script>

        function myFunction() {
            document.getElementById("demo").innerHTML = "Enviado com Sucesso!";
        }


    </script>

</head>

<body>

    <div class="card text-center">
        <div class="card-user">
            <div>
                <img src="~/Content/imagem/UsuarioPerfil/Placa.png" style="height: 75px; width: 75px;" class="mt-3" />
            </div>
            <h4 class="card-title">Bem vindo viajante</h4>
            <div>
                <p class="card-text">Obrigado por compartilhar com a gente!</p>

            </div>

            <div class="form-group col-4 offset-4 mt-3">
                <h4 class="sub-title">Nome</h4>
                <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Usuario">
            </div>

            <div class="form-group col-4 offset-4">
                <h4 class="sub-title">E-mail</h4>
                <input type="text" class="form-control" id="Email" name="Email" placeholder="Email">
            </div>

            <div class="form-group col-4 offset-4">
                <label for="exampleFormControlTextarea1">Descrição do Local</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>

            <button onclick="myFunction()" class="btn btn-outline-success float-none">Enviar</button>
            <p id="demo"></p>


        </div>
    </div>
</body>






