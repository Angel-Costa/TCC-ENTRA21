
@{
    ViewBag.Title = "Index";
}


@section css{
    <link href="~/Content/css/Perfil/Index.css" rel="stylesheet" />
}

<form action="javascript:void(0)" method="post">
    <div class="personal-image">
        <label class="label">
            <input type="file" />
            <figure class="personal-figure">
                <img src="~/Content/FOTO ZIIKA DO USUARIO ZIKA.jpg" class="personal-avatar" alt="avatar">
                <figcaption class="personal-figcaption">
                </figcaption>
            </figure>
        </label>

        <div class="form-group col-4 offset-4">
            <h4 class="sub-title">Usuário</h4>
            <input type="text" class="form-control" id="Nome" name="Nome" readonly="readonly" placeholder="Usuario" >
        </div>

        <div class="form-group col-4 offset-4">
            <h4 class="sub-title">E-mail</h4>
            <input type="text" class="form-control" id="Email" name="Email" readonly="readonly" placeholder="Email" >
        </div>
        <a href="@Url.Action("editarperfil")" class="btn btn-outline-primary"> <i class="fas fa-pen"></i>Editar</a>
    </div>
</form>



