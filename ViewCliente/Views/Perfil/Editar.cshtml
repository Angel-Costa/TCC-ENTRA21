
@{
    ViewBag.Title = "Editar";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont icofont icofont-user-alt-3" style="background-color: #171d2b;"></i>
                <div class="d-inline">
                    <h4 style="text-transform: capitalize">Editar informações do perfil</h4>
                </div>
            </div>
        </div>
    </div>
</div>


<form action="@Url.Action("Editar")" method="post">
    <div class="card">
        <div class="card-body ">
            <div class="row">
                <div class="col-sm-12 col-xl-5 m-b-30">
                    <h4 class="sub-title">Nome Completo</h4>
                    <input id="campo-nome" class="form-control" type="text" name="nome" placeholder="Digite o nome completo" maxlength="70" autocomplete="off"  value="@ViewBag.Cliente.Nome"/>
                </div>
                <div class="col-sm-12 col-xl-4 m-b-30">
                    <h4 class="sub-title">Estado</h4>
                    <input id="campo-estado" class="form-control" type="text" name="estado" placeholder="Digite o nome do seu Estado" autocomplete="off"  value="@ViewBag.Cliente.Estado"/>
                </div>
                <div class="col-sm-12 col-xl-4 m-b-30">
                    <h4 class="sub-title">Cidade</h4>
                    <input id="campo-cidade" class="form-control" type="text" name="cidade" placeholder="Digite a sua cidade" autocomplete="off"  value="@ViewBag.Cliente.Cidade"/>
                </div>
                <div class="col-sm-12 col-xl-4 m-b-30">
                    <h4 class="sub-title">Email</h4>
                    <input id="campo-login" class="form-control" type="text" name="login" placeholder="Digite o seu email" autocomplete="off"  value="@ViewBag.Cliente.Login"/>
                </div>
                <div class="col-sm-12 col-xl-4 m-b-30">
                    <h4 class="sub-title">Celular</h4>
                    <input id="campo-celular" class="form-control telphone_with_code" type="text" name="celular" placeholder="Digite o seu celular" data-mask="(00) 0-00000-0000" autocomplete="off"  />
                </div>
                <div class="col-sm-12 col-xl-2 m-b-30">
                    <button class="btn btn-outline-success" type="submit"><i class="fas fa-save"></i>Salvar</button>
                </div>  
            </div>
        </div>
    </div>
</form>
