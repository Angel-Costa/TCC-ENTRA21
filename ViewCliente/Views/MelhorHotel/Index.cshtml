
@{
    ViewBag.Title = "Index";

}



<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-header card">
                <div class="row align-items-end">
                    <div class="col-lg-8">
                        <div class="page-header-title">
                            <i class="icofont icofont-hotel-alt" style="background-color: #171d2b;"></i>
                            <div class="d-inline">
                                <h4>Hotéis</h4>

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="/home">
                                        <i class="icofont icofont-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Hóteis</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5></h5>
                    <p>Explore com as melhores fotos e descubra para a onde quer ir!</p>
                    <div class="card-header-right">
                        <i class="icofont icofont-spinner-alt-5"></i>
                    </div>
                </div>
                <div class="card-block">
                    <div class="row">
                        <div class="row">
                            <div class="grid">
                                @foreach (Model.Hotel hotel in ViewBag.Hoteis)
                                {
                                    <figure class="effect-julia">
                                        <img src="~/Content/Uploads/Hoteis/@hotel.Imagem" alt="img21" class="img-fluid" />
                                        <figcaption>
                                            <h2>@hotel.Nome<span></span></h2>
                                            <div>
                                                <p>Aproveite essa oportunidade.</p>
                                                <p>Estamos esperando viajante.</p>
                                                <p>Venha conhecer agora.</p>
                                            </div>
                                        </figcaption>
                                    </figure>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
